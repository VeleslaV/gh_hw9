{% extends 'VelesHomeWorkBundle:HomeWork:index.html.twig' %}

{% block container %}
    {{ include ('VelesHomeWorkBundle:HomeWork/Modules:breadcrumbs.html.twig', {'sectionName': 'Articles', 'pageName': sectionData.title}) }}
    <div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form', 'novalidate': 'novalidate' }}) }}
        <div class="form_container">
            <div class="row">
                {{ form_widget(form.views, {'attr': {'hidden': 'hidden' }}) }}
                <div class="form-group">
                    <label class="col-sm-2 control-label">Category</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.category, {'attr': {'class': 'form-control' }}) }} {{ form_errors(form.category) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Title</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control' }}) }} {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Body</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.body, {'attr': {'class': 'form-control' }}) }} {{ form_errors(form.body) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Tags</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.tags, {'attr': {'class': 'form-control' }}) }} {{ form_errors(form.tags) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-xs-10">
                        <button class="btn btn-block btn-primary" type="submit">Send</button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock container %}