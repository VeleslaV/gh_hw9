<div class="page-header">
    <ol class="breadcrumb">
        <li><a href="{{ path('_main') }}">Home</a></li>

        {% if sectionName is defined %}
            <li>{{ sectionName }}</li>
        {% endif %}

        {% if app.request.get('_route') == "_main" %}
            <li class="active">Page <span id="pageNum">1</span></li>
        {% else %}
            <li class="active">{{ pageName }}</li>
        {% endif %}
    </ol>
</div>