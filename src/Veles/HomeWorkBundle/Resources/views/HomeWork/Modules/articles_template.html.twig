{% for data in posts %}
    <div class="latest_articles">
        <div class="title">
            <h3><a href="{{ path('_single_article', {'aid': data.id}) }}">{{ data.title }}</a></h3>
            <h5>Category: <a href="{{ path('_single_category', {'catid': data.category.name}) }}">{{ data.category.title }}</a></h5>
            <div class="clr"></div>
        </div>
        <h6>
            <b>Published:</b> {{ data.created.date }}<br>
            <b>Views:</b> <span class="views">{{ data.views }}</span>
        </h6>
        {% set image = 'bundles/veleshomework/images/' ~ data.img %}
        <img class="img-circle-middle" src="{{ image | imagine_filter('my_thumb') }}" />
        {% if app.request.get('_route') == "_single_article" %}
            {{ data.body | raw }}
        {% else %}
            {{ data.body|cutString(1200) | raw }}
        {% endif %}
        <div class="clr"></div>
        <div class="tags_container">
            Tags:
            {% for tags in data.tags %}
                <a href="{{ path('_single_tag', {'tid': tags.name}) }}">{{ tags.title }}</a>,
            {% endfor %}
        </div>
        <hr />
    </div>
{% endfor %}