<div class="sidebar">
    <div class="well sidebar-nav">
        <div class="wrapper">
            <ul class="nav nav-list">
                <li class="nav-header">Last Articles</li>
                {% for article in latestArticles %}
                    <li><a href="{{ path('_single_article', {'aid': article.id}) }}">{{ article.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="wrapper">
            <ul class="nav nav-list">
                <li class="nav-header">Most viewed articles</li>
                {% for article in mostViewedArticles %}
                    <li><a href="{{ path('_single_article', {'aid': article.id}) }}">{{ article.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="wrapper">
            <ul class="nav nav-list">
                <li class="nav-header">Last post from guest book</li>
                {% for comment in latestComments %}
                    <li><a href="{{ path('_single_comment', {'cid': comment.id}) }}">{{ comment.message|cutString(28) }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="wrapper">
            <ul class="nav nav-list">
                <li class="nav-header">Tags</li>
                {% for tag in allTags %}
                    <a href="{{ path('_single_tag', {'tid': tag.id}) }}">{{ tag.title }}</a>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>