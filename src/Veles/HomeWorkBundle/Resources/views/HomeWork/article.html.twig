{% extends 'VelesHomeWorkBundle:HomeWork:index.html.twig' %}

{% block container %}
    {% if sectionData.error is defined %}
        <b>{{ sectionData.error  }}</b>
    {% else %}
        {{ include ('VelesHomeWorkBundle:HomeWork/Modules:breadcrumbs.html.twig', {'sectionName': 'Articles', 'pageName': sectionData.title}) }}
        <div class="">
            <div class="latest_articles">
                <div class="title">
                    <h3><a href="{{ path('_single_article', {'aid': sectionData.id}) }}">{{ sectionData.title }}</a></h3>
                    <h5>Category: <a href="{{ path('_single_category', {'catid': sectionData.category.name}) }}">{{ sectionData.category.title }}</a></h5>
                    <div class="clr"></div>
                </div>
                <h6><b>Published:</b> {{ sectionData.created.date }}<br> <b>Views:</b> {{ sectionData.views }}</h6>
                <img class="img-circle-middle" src="https://cdn1.iconfinder.com/data/icons/UltraBuuf/128/Thor.png">
                {{ sectionData.body }}
                <div class="clr"></div>
                <div class="tags_container">
                    Tags:
                    {% for tags in sectionData.tags %}
                        <a href="{{ path('_single_tag', {'tid': tags.name}) }}">{{ tags.title }}</a>,
                    {% endfor %}
                </div>
                <hr />
            </div>
        </div>
    {% endif %}
{% endblock container %}