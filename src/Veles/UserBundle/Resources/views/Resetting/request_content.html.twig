{% trans_default_domain 'FOSUserBundle' %}
{{ include ('VelesHomeWorkBundle:HomeWork/Modules:breadcrumbs.html.twig', {'pageName': 'layout.password_reset'|trans()}) }}


{% if invalid_username is defined %}
    <div class="text-danger col-sm-offset-3 col-sm-6" style="padding: 0px;">
        <blockquote>
            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
        </blockquote>
    </div>
{% endif %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
    <div class="form_container" style="margin-left: 0px;">
        <div class="row">
            <div class="form-group">
                <label class="col-sm-3 control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                <div class="col-sm-4">
                    <input class="form-control" type="text" id="username" name="username" required="required" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-4">
                    <input class="btn btn-default" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </div>
        </div>
    </div>
</form>
