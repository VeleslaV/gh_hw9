{% trans_default_domain 'FOSUserBundle' %}
{{ include ('VelesHomeWorkBundle:HomeWork/Modules:breadcrumbs.html.twig', {'pageName': 'layout.register'|trans}) }}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal" novalidate="novalidate">
    <div class="form_container" style="margin-left: 0px;">
        {{ form_widget(form._token, {'attr': {'hidden': 'hidden' }}) }}
        {{ form_errors(form._token) }}
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.email) }}</label>
                <div class="col-sm-4">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
                </div>
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.username) }}</label>
                <div class="col-sm-4">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control' }}) }}
                </div>
                {{ form_errors(form.username) }}
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.plainPassword.first) }}</label>
                <div class="col-sm-4">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}
                </div>
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.plainPassword.second) }}</label>
                <div class="col-sm-4">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
                </div>
                {{ form_errors(form.plainPassword.second) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <input class="btn btn-default" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>
            </div>
        </div>
    </div>
</form>
